package deu.java002_02.ni;

public enum NetworkCode
{
    SERVICE_ROUTINE(0x02),

    ERROR(0xff),
    CONNECTED(0x01),
    DISCONNECTED(0x00);

    private int m_code;

    NetworkCode(int _code)
    {
        m_code = _code;
    }
    
    public static NetworkCode getCode(int _intCode)
    {
    	switch(_intCode)
    	{
    	case 0:
    		return DISCONNECTED;
    	case 1:
    		return CONNECTED;
    	case 2:
    		return SERVICE_ROUTINE;
    	default:
    		return ERROR;
    	}
    }

    public int getValue()
    {
        return m_code;
    }
}
