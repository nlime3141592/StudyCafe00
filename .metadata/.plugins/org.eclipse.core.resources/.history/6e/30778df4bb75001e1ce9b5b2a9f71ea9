package deu.java002_02.tprovider.main;

import java.io.IOException;
import java.net.InetSocketAddress;
import java.net.Socket;
import java.net.SocketAddress;
import java.net.UnknownHostException;

import deu.java002_02.ni.StandardNetworkModule;
import deu.java002_02.tprovider.gui.TestGui;

public class TProviderMain
{
	public static StandardNetworkModule netModule;

	public static void main(String[] args)
	{
		Socket socket = new Socket();
		SocketAddress address = new InetSocketAddress("localhost", 28170);
		try
		{
			socket.connect(address, 10 * 1000);
			
			netModule = new StandardNetworkModule(socket);
			netModule.writeByte(2);

			new TestGui();
		}
		catch (IOException e)
		{
			System.out.println("서버와의 연결이 끊어졌습니다.")
			e.printStackTrace();
		}
	}
}
