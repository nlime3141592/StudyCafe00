package deu.java002_02.server;

import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;

public class ProviderAcceptThread extends AcceptThread
{
	public ProviderAcceptThread(Server _server, ServerSocket _serverSocket)
	{
		super(_server, _serverSocket);
	}

	@Override
	public void run()
	{
		while(!super.isHalted())
		{
			try
			{
				Socket providerSocket = super.getServerSocket().accept();
				super.getServer().getProviderServiceManager().enqueueClient(providerSocket);
			}
			catch (IOException e)
			{
				e.printStackTrace();
			}
		}
	}
}
