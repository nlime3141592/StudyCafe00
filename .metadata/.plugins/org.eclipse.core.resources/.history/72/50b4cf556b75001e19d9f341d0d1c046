package deu.java002_02.server;

import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;

import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;

public class CustomerAcceptThread extends AcceptThread
{
	public CustomerAcceptThread(Server _server, ServerSocket _serverSocket)
	{
		super(_server, _serverSocket);
	}
	
	@Override
	public void run()
	{
		while(!super.isHalted())
		{
			try
			{
				Socket customerSocket = super.getServerSocket().accept();
				super.getServer().getCustomerServiceManager().enqueueClient(customerSocket);
			}
			catch (IOException e)
			{
				e.printStackTrace();
			}
		}
	}
}
