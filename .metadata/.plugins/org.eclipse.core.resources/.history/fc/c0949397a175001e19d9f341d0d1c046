package deu.java002_02.server2;

import java.io.UnsupportedEncodingException;
import java.net.Socket;

public class CustomerThread extends ClientThread
{
	public CustomerThread(Socket _socket)
	{
		super(_socket);
	}

	@Override
	public void run()
	{
		while(super.getThreadState() == ThreadState.RUNNING)
		{
			String line = super.readLine();
			
			byte[] b = line.getBytes();
			String str = null;
			try {
				str = new String(b, "euc-kr");
			} catch (UnsupportedEncodingException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}

			System.out.println("Customer message: " + str);
		}
	}
}
